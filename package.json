{
  "name": "nice-pr",
  "displayName": "nice-pr",
  "description": "Make your PR nice for other developers to review",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:nicePrView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nice-pr-sidebar",
          "title": "Nice PR",
          "icon": "$(git-pull-request)"
        }
      ]
    },
    "views": {
      "nice-pr-sidebar": [
        {
          "id": "nicePrRebaseView",
          "name": "Rebased Commits"
        },
        {
          "id": "nicePrView",
          "name": "Original Commits"
        }
      ]
    },
    "commands": [
      {
        "command": "nicePr.showDiff",
        "title": "Show commit diff"
      },
      {
        "command": "nicePr.startRebase",
        "title": "Start Rebase",
        "icon": "$(debug-start)"
      },
      {
        "command": "nicePr.cancelRebase",
        "title": "Cancel Rebase",
        "icon": "$(close)"
      },
      {
        "command": "nicePr.approveRebase",
        "title": "Approve Rebase",
        "icon": "$(check)"
      },
      {
        "command": "nicePr.editCommitMessage",
        "title": "Edit Commit Message"
      },
      {
        "command": "nicePr.removeCommit",
        "title": "Remove Commit",
        "icon": "$(trash)"
      },
      {
        "command": "nicePr.addCommit",
        "title": "Add New Commit",
        "icon": "$(add)"
      },
      {
        "command": "nicePr.showFileDiff",
        "title": "Show File Changes"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nicePr.startRebase",
          "when": "view == nicePrRebaseView && !nicePr.isRebasing",
          "group": "navigation"
        },
        {
          "command": "nicePr.cancelRebase",
          "when": "view == nicePrRebaseView && nicePr.isRebasing",
          "group": "navigation"
        },
        {
          "command": "nicePr.approveRebase",
          "when": "view == nicePrRebaseView && nicePr.isRebasing",
          "group": "navigation"
        },
        {
          "command": "nicePr.addCommit",
          "when": "view == nicePrRebaseView && nicePr.isRebasing",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nicePr.removeCommit",
          "when": "view == nicePrRebaseView && nicePr.isRebasing && viewItem == emptyCommit",
          "group": "inline",
          "title": "Remove Empty Commit"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "diff": "^7.0.0"
  }
}
